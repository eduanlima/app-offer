<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|clip_vertical|center_horizontal"
    android:background="@drawable/bg_round"
    android:orientation="vertical"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroupOptionSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onRadioOptionClicked"
                android:text="Ofertas"
                android:textColor="@color/black_standard"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButtonStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onRadioOptionClicked"
                android:text="Lojas"
                android:textColor="@color/black_standard"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButtonLocals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onRadioOptionClicked"
                android:text="Meus locais"
                android:textColor="@color/black_standard"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonConfirmOption"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btt_confirm_bg"
            android:onClick="confirmOption"/>
    </LinearLayout>

</LinearLayout>